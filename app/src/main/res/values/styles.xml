<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentBarsTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="WhiteToolbarBackArrow" parent="AppTheme">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="WhiteBackground" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="NoTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StartScreen.AgreeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/MuliBoldTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="StartScreen.BuyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textAppearance">@style/MuliBoldTextAppearance</item>
        <item name="android:text">@string/button_buy_product</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="StartScreen.GoToDashboard" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/MuliBoldTextAppearance</item>
        <item name="android:text">@string/button_go_to_dashboard</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ActivationFeedback.Retry" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/MuliBoldTextAppearance</item>
        <item name="android:text">@string/retry_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="StartScreen.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/MuliExtraBoldTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PurchaseScreen.StepText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/MuliRegularTextAppearance</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RedeemScreen.ReceiveButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/MuliBoldTextAppearance</item>
        <item name="android:text">Receive</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="PlaceholerMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/MuliBlackTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/color_rounded_button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="PlaceholerTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/MuliExtraBoldTextAppearance</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlaceholerSideMenButton.Primary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/MuliBlackTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PlaceholerSideMenButton.Secondary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/MuliExtraBoldTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PlaceholerNavigationButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAppearance">@style/MuliRegularTextAppearance</item>
        <item name="android:textColor">@color/colorNavigationItemNotSelected</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SearchTextStyle">
        <item name="android:textAppearance">@style/MuliRegularTextAppearance</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/searchGray</item>
    </style>

</resources>
