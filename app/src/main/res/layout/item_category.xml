<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCategoryLogo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/logo_royal" />

    <TextView
        android:id="@+id/tvCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:lineSpacingMultiplier="1"
        android:textAppearance="@style/MuliSemiBoldTextAppearance"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivCategoryLogo"
        app:layout_constraintStart_toStartOf="@+id/ivCategoryLogo"
        app:layout_constraintTop_toBottomOf="@+id/ivCategoryLogo"
        tools:text="Art &amp; Design" />

    <ImageView
        android:id="@+id/ivCheckMark"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo_check_mark"
        app:layout_constraintCircle="@+id/ivCategoryLogo"
        app:layout_constraintCircleAngle="67"
        app:layout_constraintCircleRadius="20dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
